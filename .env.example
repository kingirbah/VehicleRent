# JomSewa V6.0 - Environment Configuration Example
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your_generated_secret_key_here_use_python_secrets
DEBUG=False
FLASK_ENV=production

# Admin Configuration
ADMIN_PASSWORD=your_secure_admin_password_here

# WhatsApp Configuration
WHATSAPP_NUMBER=60123456789

# Upload Configuration
MAX_FILE_SIZE=1048576  # 1MB in bytes
UPLOAD_FOLDER=static/uploads/vehicles

# Database Configuration
DATABASE_PATH=database.db

# Server Configuration (for production)
HOST=0.0.0.0
PORT=5000
WORKERS=4  # For gunicorn

# Backup Configuration
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30

# Security
SESSION_COOKIE_SECURE=True  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# How to generate SECRET_KEY:
# python -c "import secrets; print(secrets.token_hex(32))"

# Note: Never commit .env file to version control!
# Add .env to your .gitignore file
